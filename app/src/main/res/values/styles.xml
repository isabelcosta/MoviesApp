<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Here you go. This changes overflow icon colour. -->
        <!--<item name="android:textColorSecondary">@color/white</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DrawerLayoutTitle">
        <item name="android:textSize">@dimen/generic_22sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="NowPlayingMoviesItemTitle">
        <item name="android:textSize">@dimen/generic_16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MostPopularShowsItemText">
        <item name="android:textSize">@dimen/generic_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <style name="ClickableButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


</resources>

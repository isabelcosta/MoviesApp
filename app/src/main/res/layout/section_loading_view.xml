<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:alpha="0.9"
    android:clickable="false"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/generic_14dp"/>

    <TextView
        android:id="@+id/loadingMessageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/loadingProgressBar"
        android:text="@string/loading_message"
        android:layout_marginBottom="@dimen/generic_10dp" />

    <TextView
        android:id="@+id/loadingSubMessageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/loadingMessageView"
        tools:text="@string/loading_sub_message" />
</RelativeLayout>